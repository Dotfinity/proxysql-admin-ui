@inherits LayoutComponentBase
@inject AppVersion AppVersion

<RadzenComponents @rendermode="InteractiveServer" />

<RadzenLayout>
    <RadzenHeader>
        <RadzenMenu>
            <RadzenMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenMenuItem Text="Mysql Users" Icon="account_box" Path="/mysql/users" />
            <RadzenMenuItem Text="Mysql Servers" Icon="dns" Path="/mysql/servers" />
            <RadzenMenuItem Text="Rules" Icon="quiz" Path="/mysql/rules" />
            <RadzenMenuItem Text="Query Digest" Icon="query_stats" Path="/mysql/queries/digest" />
            <RadzenMenuItem Text="Global Variables" Icon="settings" Path="/proxysql/global-variables" />
            <RadzenMenuItem Text="Actions" Icon="build" Path="/proxysql/actions" />
        </RadzenMenu>
       
    </RadzenHeader>
    <RadzenBody>
        @Body
    </RadzenBody>
    <RadzenFooter Style="height:30px;padding-top:2px;">
        <RadzenBadge BadgeStyle="BadgeStyle.Info"><RadzenLink Style="color:white;" Path="@("https://github.com/Dotfinity/proxysql-admin-ui/releases/"+AppVersion.Version)" Text="@AppVersion.Version" /></RadzenBadge>
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebar1Expanded = true; 
}